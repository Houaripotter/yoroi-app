// YOROI - INJURY DETAIL SCREEN
// ============================================
// Detailed view of a single injury with history

import React, { useState, useEffect } from 'react';
import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  TouchableOpacity,
  Alert,
  TextInput,
  Modal,
} from 'react-native';
import { router, useLocalSearchParams } from 'expo-router';
import { format } from 'date-fns';
import { fr } from 'date-fns/locale';
import {
  X,
  TrendingDown,
  TrendingUp,
  Minus,
  AlertCircle,
  Calendar,
  FileText,
  Plus,
  Check,
  ChevronLeft,
} from 'lucide-react-native';
import { useTheme } from '@/lib/ThemeContext';
import { SPACING, RADIUS } from '@/constants/appTheme';
import { infirmaryService, Injury, EVARecord, Treatment, INJURY_TYPES } from '@/lib/infirmary';
import { EVAScale } from '@/components/EVAScale';

export default function InjuryDetailScreen() {
  const { colors } = useTheme();
  const params = useLocalSearchParams();
  const injuryId = params.id as string;

  const [injury, setInjury] = useState<Injury | null>(null);
  const [addEVAModalVisible, setAddEVAModalVisible] = useState(false);
  const [addTreatmentModalVisible, setAddTreatmentModalVisible] = useState(false);
  const [newEVA, setNewEVA] = useState(0);
  const [newTreatmentType, setNewTreatmentType] = useState('');
  const [newTreatmentNotes, setNewTreatmentNotes] = useState('');

  useEffect(() => {
    loadInjury();
  }, [injuryId]);

  const loadInjury = async () => {
    try {
      const allInjuries = await infirmaryService.getAllInjuries();
      const foundInjury = allInjuries.find(i => i.id === injuryId);
      if (foundInjury) {
        setInjury(foundInjury);
      } else {
        Alert.alert('Erreur', 'Blessure introuvable');
        router.back();
      }
    } catch (error) {
      console.error('[InjuryDetail] Error loading injury:', error);
    }
  };

  const handleAddEVA = async () => {
    if (!injury) return;

    try {
      await infirmaryService.addEVARecord(injury.id, newEVA);
      setAddEVAModalVisible(false);
      setNewEVA(0);
      loadInjury();
    } catch (error) {
      console.error('[InjuryDetail] Error adding EVA:', error);
      Alert.alert('Erreur', 'Impossible d\'ajouter l\'évaluation');
    }
  };

  const handleAddTreatment = async () => {
    if (!injury || !newTreatmentType.trim()) {
      Alert.alert('Erreur', 'Le type de traitement est requis');
      return;
    }

    try {
      await infirmaryService.addTreatment(injury.id, {
        type: newTreatmentType as any,
        note: newTreatmentNotes.trim() || undefined,
      });
      setAddTreatmentModalVisible(false);
      setNewTreatmentType('');
      setNewTreatmentNotes('');
      loadInjury();
    } catch (error) {
      console.error('[InjuryDetail] Error adding treatment:', error);
      Alert.alert('Erreur', 'Impossible d\'ajouter le traitement');
    }
  };

  const handleMarkAsHealed = async () => {
    if (!injury) return;

    Alert.alert(
      'Marquer comme guéri',
      'Êtes-vous sûr que cette blessure est guérie ?',
      [
        { text: 'Annuler', style: 'cancel' },
        {
          text: 'Confirmer',
          onPress: async () => {
            try {
              await infirmaryService.markAsHealed(injury.id);
              Alert.alert('✅ Guérison confirmée', 'Excellent travail, Guerrier !', [
                { text: 'OK', onPress: () => router.back() }
              ]);
            } catch (error) {
              console.error('[InjuryDetail] Error marking as healed:', error);
              Alert.alert('Erreur', 'Impossible de marquer comme guéri');
            }
          }
        }
      ]
    );
  };

  if (!injury) {
    return (
      <View style={[styles.screen, { backgroundColor: colors.background }]}>
        <Text style={{ color: colors.textPrimary }}>Chargement...</Text>
      </View>
    );
  }

  // Calculer la tendance
  const evaHistory = injury.evaHistory || [];
  const latestEVA = evaHistory[evaHistory.length - 1];
  const previousEVA = evaHistory.length > 1 ? evaHistory[evaHistory.length - 2] : null;
  const trend = previousEVA
    ? latestEVA.score < previousEVA.score
      ? 'improving'
      : latestEVA.score > previousEVA.score
      ? 'worsening'
      : 'stable'
    : 'stable';

  const getTrendIcon = () => {
    switch (trend) {
      case 'improving':
        return <TrendingDown size={20} color={colors.success} />;
      case 'worsening':
        return <TrendingUp size={20} color={colors.danger} />;
      default:
        return <Minus size={20} color={colors.textMuted} />;
    }
  };

  const getTrendText = () => {
    switch (trend) {
      case 'improving':
        return 'En amélioration';
      case 'worsening':
        return 'En aggravation';
      default:
        return 'Stable';
    }
  };

  const getTrendColor = () => {
    switch (trend) {
      case 'improving':
        return colors.success;
      case 'worsening':
        return colors.danger;
      default:
        return colors.textMuted;
    }
  };

  const getStatusColor = () => {
    switch (injury.status) {
      case 'active':
        return colors.danger;
      case 'healing':
        return colors.warning;
      case 'healed':
        return colors.success;
      default:
        return colors.textMuted;
    }
  };

  const getStatusLabel = () => {
    switch (injury.status) {
      case 'active':
        return 'ACTIVE';
      case 'healing':
        return 'EN GUÉRISON';
      case 'healed':
        return 'GUÉRIE';
      default:
        return 'INCONNU';
    }
  };

  return (
    <View style={[styles.screen, { backgroundColor: colors.background }]}>
      {/* Header */}
      <View style={[styles.header, { backgroundColor: colors.backgroundCard, borderBottomColor: colors.border }]}>
        <TouchableOpacity onPress={() => router.back()} style={styles.backButton}>
          <ChevronLeft size={24} color={colors.textPrimary} />
        </TouchableOpacity>
        <View style={styles.headerCenter}>
          <Text style={[styles.headerTitle, { color: colors.textPrimary }]}>{injury.zoneName}</Text>
          <Text style={[styles.headerSubtitle, { color: colors.textSecondary }]}>{injury.type}</Text>
        </View>
        <View style={{ width: 40 }} />
      </View>

      <ScrollView style={styles.scrollView} contentContainerStyle={styles.content}>
        {/* Status Card */}
        <View style={[styles.statusCard, { backgroundColor: colors.backgroundCard, borderColor: colors.border }]}>
          <View style={styles.statusRow}>
            <View style={[styles.statusBadge, { backgroundColor: `${getStatusColor()}20` }]}>
              <Text style={[styles.statusText, { color: getStatusColor() }]}>{getStatusLabel()}</Text>
            </View>
            <View style={styles.trendBadge}>
              {getTrendIcon()}
              <Text style={[styles.trendText, { color: getTrendColor() }]}>{getTrendText()}</Text>
            </View>
          </View>

          <View style={styles.statusInfoRow}>
            <View style={styles.statusInfo}>
              <Text style={[styles.statusLabel, { color: colors.textMuted }]}>CRÉÉE LE</Text>
              <Text style={[styles.statusValue, { color: colors.textPrimary }]}>
                {format(new Date(injury.dateCreated), 'dd MMM yyyy', { locale: fr })}
              </Text>
            </View>
            {injury.dateHealed && (
              <View style={styles.statusInfo}>
                <Text style={[styles.statusLabel, { color: colors.textMuted }]}>GUÉRIE LE</Text>
                <Text style={[styles.statusValue, { color: colors.success }]}>
                  {format(new Date(injury.dateHealed), 'dd MMM yyyy', { locale: fr })}
                </Text>
              </View>
            )}
          </View>
        </View>

        {/* Current Pain Level */}
        {latestEVA && (
          <View style={[styles.card, { backgroundColor: colors.backgroundCard, borderColor: colors.border }]}>
            <View style={styles.cardHeader}>
              <Text style={[styles.cardTitle, { color: colors.textPrimary }]}>Niveau de douleur actuel</Text>
              <TouchableOpacity
                style={[styles.addButton, { backgroundColor: colors.accentMuted }]}
                onPress={() => setAddEVAModalVisible(true)}
              >
                <Plus size={16} color={colors.accent} />
                <Text style={[styles.addButtonText, { color: colors.accent }]}>Évaluer</Text>
              </TouchableOpacity>
            </View>
            <View style={styles.evaDisplay}>
              <Text style={[styles.evaValue, { color: colors.accent }]}>{latestEVA.score}/10</Text>
              <Text style={[styles.evaDate, { color: colors.textMuted }]}>
                {format(new Date(latestEVA.date), 'dd MMM yyyy', { locale: fr })}
              </Text>
            </View>
          </View>
        )}

        {/* EVA History */}
        {evaHistory.length > 0 && (
          <View style={[styles.card, { backgroundColor: colors.backgroundCard, borderColor: colors.border }]}>
            <View style={styles.cardHeader}>
              <View style={styles.cardHeaderLeft}>
                <Calendar size={18} color={colors.accent} />
                <Text style={[styles.cardTitle, { color: colors.textPrimary }]}>Historique EVA</Text>
              </View>
            </View>
            <View style={styles.historyList}>
              {[...evaHistory].reverse().map((record, index) => (
                <View
                  key={index}
                  style={[
                    styles.historyItem,
                    { borderBottomColor: colors.border },
                    index === evaHistory.length - 1 && { borderBottomWidth: 0 }
                  ]}
                >
                  <View style={styles.historyLeft}>
                    <Text style={[styles.historyDate, { color: colors.textSecondary }]}>
                      {format(new Date(record.date), 'dd MMM yyyy', { locale: fr })}
                    </Text>
                  </View>
                  <View style={[styles.evaChip, { backgroundColor: `${colors.accent}20` }]}>
                    <Text style={[styles.evaChipText, { color: colors.accent }]}>{record.score}/10</Text>
                  </View>
                </View>
              ))}
            </View>
          </View>
        )}

        {/* Treatments */}
        <View style={[styles.card, { backgroundColor: colors.backgroundCard, borderColor: colors.border }]}>
          <View style={styles.cardHeader}>
            <View style={styles.cardHeaderLeft}>
              <FileText size={18} color={colors.accent} />
              <Text style={[styles.cardTitle, { color: colors.textPrimary }]}>Traitements</Text>
            </View>
            <TouchableOpacity
              style={[styles.addButton, { backgroundColor: colors.accentMuted }]}
              onPress={() => setAddTreatmentModalVisible(true)}
            >
              <Plus size={16} color={colors.accent} />
              <Text style={[styles.addButtonText, { color: colors.accent }]}>Ajouter</Text>
            </TouchableOpacity>
          </View>
          {injury.treatments && injury.treatments.length > 0 ? (
            <View style={styles.treatmentsList}>
              {[...injury.treatments].reverse().map((treatment, index) => (
                <View
                  key={index}
                  style={[
                    styles.treatmentItem,
                    { backgroundColor: colors.background, borderColor: colors.border }
                  ]}
                >
                  <View style={styles.treatmentHeader}>
                    <Text style={[styles.treatmentType, { color: colors.accent }]}>{treatment.type}</Text>
                    <Text style={[styles.treatmentDate, { color: colors.textMuted }]}>
                      {format(new Date(treatment.date), 'dd MMM', { locale: fr })}
                    </Text>
                  </View>
                  {treatment.note && (
                    <Text style={[styles.treatmentNotes, { color: colors.textSecondary }]}>
                      {treatment.note}
                    </Text>
                  )}
                </View>
              ))}
            </View>
          ) : (
            <View style={styles.emptyState}>
              <Text style={[styles.emptyText, { color: colors.textMuted }]}>
                Aucun traitement enregistré
              </Text>
            </View>
          )}
        </View>

        {/* Notes */}
        {injury.notes && (
          <View style={[styles.card, { backgroundColor: colors.backgroundCard, borderColor: colors.border }]}>
            <View style={styles.cardHeader}>
              <View style={styles.cardHeaderLeft}>
                <AlertCircle size={18} color={colors.accent} />
                <Text style={[styles.cardTitle, { color: colors.textPrimary }]}>Notes</Text>
              </View>
            </View>
            <Text style={[styles.notesText, { color: colors.textSecondary }]}>{injury.notes}</Text>
          </View>
        )}

        {/* Actions */}
        {injury.status !== 'healed' && (
          <TouchableOpacity
            style={[styles.healButton, { backgroundColor: colors.successMuted, borderColor: colors.success }]}
            onPress={handleMarkAsHealed}
            activeOpacity={0.8}
          >
            <Check size={20} color={colors.success} />
            <Text style={[styles.healButtonText, { color: colors.success }]}>Marquer comme guéri</Text>
          </TouchableOpacity>
        )}

        <View style={{ height: 40 }} />
      </ScrollView>

      {/* Add EVA Modal */}
      <Modal
        visible={addEVAModalVisible}
        animationType="slide"
        transparent={true}
        onRequestClose={() => setAddEVAModalVisible(false)}
      >
        <View style={styles.modalOverlay}>
          <View style={[styles.modalContent, { backgroundColor: colors.backgroundCard }]}>
            <View style={styles.modalHeader}>
              <Text style={[styles.modalTitle, { color: colors.textPrimary }]}>
                Évaluer la douleur
              </Text>
              <TouchableOpacity onPress={() => setAddEVAModalVisible(false)}>
                <X size={24} color={colors.textMuted} />
              </TouchableOpacity>
            </View>

            <View style={styles.modalBody}>
              <EVAScale value={newEVA} onChange={setNewEVA} />
            </View>

            <View style={styles.modalActions}>
              <TouchableOpacity
                style={[styles.modalButton, styles.modalButtonCancel, { backgroundColor: colors.background }]}
                onPress={() => setAddEVAModalVisible(false)}
              >
                <Text style={[styles.modalButtonText, { color: colors.textMuted }]}>Annuler</Text>
              </TouchableOpacity>
              <TouchableOpacity
                style={[styles.modalButton, styles.modalButtonConfirm, { backgroundColor: colors.accent }]}
                onPress={handleAddEVA}
              >
                <Text style={[styles.modalButtonText, { color: colors.textOnAccent }]}>Enregistrer</Text>
              </TouchableOpacity>
            </View>
          </View>
        </View>
      </Modal>

      {/* Add Treatment Modal */}
      <Modal
        visible={addTreatmentModalVisible}
        animationType="slide"
        transparent={true}
        onRequestClose={() => setAddTreatmentModalVisible(false)}
      >
        <View style={styles.modalOverlay}>
          <View style={[styles.modalContent, { backgroundColor: colors.backgroundCard }]}>
            <View style={styles.modalHeader}>
              <Text style={[styles.modalTitle, { color: colors.textPrimary }]}>
                Ajouter un traitement
              </Text>
              <TouchableOpacity onPress={() => setAddTreatmentModalVisible(false)}>
                <X size={24} color={colors.textMuted} />
              </TouchableOpacity>
            </View>

            <View style={styles.modalBody}>
              <Text style={[styles.inputLabel, { color: colors.textMuted }]}>Type de traitement</Text>
              <View style={styles.treatmentTypes}>
                {['Repos', 'Glace', 'Compression', 'Élévation', 'Kiné', 'Massage', 'Strapping'].map((type) => (
                  <TouchableOpacity
                    key={type}
                    style={[
                      styles.treatmentTypeChip,
                      { backgroundColor: colors.background, borderColor: colors.border },
                      newTreatmentType === type && { backgroundColor: colors.accentMuted, borderColor: colors.accent }
                    ]}
                    onPress={() => setNewTreatmentType(type)}
                  >
                    <Text
                      style={[
                        styles.treatmentTypeText,
                        { color: colors.textSecondary },
                        newTreatmentType === type && { color: colors.accent, fontWeight: '700' }
                      ]}
                    >
                      {type}
                    </Text>
                  </TouchableOpacity>
                ))}
              </View>

              <Text style={[styles.inputLabel, { color: colors.textMuted, marginTop: SPACING.lg }]}>
                Notes (optionnel)
              </Text>
              <TextInput
                style={[
                  styles.textInput,
                  {
                    backgroundColor: colors.background,
                    borderColor: colors.border,
                    color: colors.textPrimary
                  }
                ]}
                placeholder="Détails du traitement..."
                placeholderTextColor={colors.textMuted}
                value={newTreatmentNotes}
                onChangeText={setNewTreatmentNotes}
                multiline
                numberOfLines={3}
              />
            </View>

            <View style={styles.modalActions}>
              <TouchableOpacity
                style={[styles.modalButton, styles.modalButtonCancel, { backgroundColor: colors.background }]}
                onPress={() => setAddTreatmentModalVisible(false)}
              >
                <Text style={[styles.modalButtonText, { color: colors.textMuted }]}>Annuler</Text>
              </TouchableOpacity>
              <TouchableOpacity
                style={[styles.modalButton, styles.modalButtonConfirm, { backgroundColor: colors.accent }]}
                onPress={handleAddTreatment}
              >
                <Text style={[styles.modalButtonText, { color: colors.textOnAccent }]}>Ajouter</Text>
              </TouchableOpacity>
            </View>
          </View>
        </View>
      </Modal>
    </View>
  );
}

