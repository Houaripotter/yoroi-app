    marginBottom: SPACING.md,
    letterSpacing: -0.3,
  },
  menuCard: {
    flexDirection: 'row',
    alignItems: 'center',
    padding: SPACING.lg,
    borderRadius: RADIUS.xl,
    marginBottom: SPACING.md,
    gap: SPACING.md,
  },
  menuIconContainer: {
    width: 56,
    height: 56,
    borderRadius: 16,
    alignItems: 'center',
    justifyContent: 'center',
  },
  menuContent: {
    flex: 1,
  },
  menuItemTitle: {
    fontSize: 17,
    fontWeight: '700',
    marginBottom: 4,
