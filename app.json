{
  "expo": {
    "name": "Yoroi",
    "slug": "yoroi",
    "displayName": "Yoroi",
    "description": "Track your fitness journey with Yoroi",
    "githubUrl": "https://github.com/your-username/yoroi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo d'app/logo1.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo d'app/logo1.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tonnom.yoroi",
      "infoPlist": {
        "NSHealthShareUsageDescription": "YOROI synchronise vos données de santé (poids, sommeil, pas, fréquence cardiaque) pour un suivi complet de votre progression.",
        "NSHealthUpdateUsageDescription": "YOROI enregistre vos données d'entraînement et vos pesées dans Apple Santé.",
        "NSSupportsLiveActivities": true
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.background-delivery": true,
        "com.apple.developer.healthkit.access": [
          "health-records"
        ]
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/logo d'app/logo1.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "@react-native-community/datetimepicker",
      [
        "@kingstinct/react-native-healthkit",
        {
          "NSHealthShareUsageDescription": "YOROI synchronise vos données de santé pour un suivi complet.",
          "NSHealthUpdateUsageDescription": "YOROI enregistre vos données dans Apple Santé.",
          "background": true
        }
      ],
      [
        "expo-health-connect",
        {
          "requestPermissionsOnFirstLaunch": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "android": {
      "package": "com.houari.yoroi",
      "permissions": [
        "android.permission.health.READ_STEPS",
        "android.permission.health.READ_WEIGHT",
        "android.permission.health.READ_SLEEP",
        "android.permission.health.READ_HEART_RATE",
        "android.permission.health.READ_DISTANCE",
        "android.permission.health.READ_TOTAL_CALORIES_BURNED",
        "android.permission.health.WRITE_WEIGHT",
        "android.permission.health.WRITE_STEPS"
      ]
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3743da81-d416-4eb3-b7a5-45e2094947cb"
      }
    }
  }
}
